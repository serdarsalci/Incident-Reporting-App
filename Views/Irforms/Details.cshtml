                            <label class="control-label font-weight-bolder">Last hour worked:</label>
                            <div class="form-control">  @Html.DisplayFor(model => model.LastHourWorked)</div>
                            <span asp-validation-for="LastHourWorked" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col-md-3 ml-4">
                        <div class="form-group row">
                            <label class="control-label font-weight-bolder">Position</label>
                            <div class="form-control">  @Html.DisplayFor(model => model.Position)</div>
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>


                        <div class="form-group row">
                            <label class="control-label font-weight-bolder">Department:</label>
                            <div class="form-control"> @Html.DisplayFor(model => model.Department)</div>
                            <span asp-validation-for="Department" class="text-danger"></span>
