                            <label class="control-label font-weight-bolder">Last Name</label>
                            <div class="form-control ">  @Html.DisplayFor(model => model.LastName)</div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>


                        <div class="form-group row">
                            <label class="control-label  font-weight-bolder">Date of incident</label>
                            <div class="form-control"> @Html.DisplayFor(model => model.DatOfIncident)</div>
                            <span asp-validation-for="DatOfIncident" class="text-danger"></span>
                        </div>

                        <div class="form-group  row">
                            <label class="control-label font-weight-bolder">Exact Location:</label>
                            <div class="form-control"> @Html.DisplayFor(model => model.ExactLocation)</div>
                            <span asp-validation-for="ExactLocation" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col-md-3 ml-4">
                        <div class="form-group row">
                            <label class="control-label font-weight-bolder">First Name:</label>
                            <div class="form-control">  @Html.DisplayFor(model => model.FirstName)</div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

