                            <label class="control-label font-weight-bolder">Time of Incident</label>
                            <div class="form-control">  @Html.DisplayFor(model => model.TimeOfIncident)</div>
                            <span asp-validation-for="TimeOfIncident" class="text-danger"></span>
                        </div>*@
