        </div>
        <div class="font-weight-bolder">
            @Html.DisplayFor(model => model.CBxInjuryReported)
            <label>Injury Reported</label>
        </div>
        <div class="font-weight-bolder">
            @Html.DisplayFor(model => model.CBxPropertyDamage)
            <label>Property Damage Only</label>
        </div>

    </div>

    <div class="clearfix"></div>


    <div class="accordion" id="sectionsAccordion">

        <div class="card">

            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        SECTION 1 - Reporting Details
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse show mb-2 ml-2 col-md-12" aria-labelledby="headingOne" data-parent="#sectionsAccordion">
                <br />
